# PrELASTICSEARCH_HOSTS=elasticsearch.production.com:9200duction Environment Configuration Example
# Copy this file to .env and customize for your production environment

# === Default Elasticsearch Instance ===
ELASTICSEARCH_HOSTS=elasticsearch.production.com
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic_user
ELASTICSEARCH_PASSWORD=secure_password
ELASTICSEARCH_TLS_ENABLED=true

# Connection Pool Settings
ELASTICSEARCH_MAX_IDLE_CONNS=200
ELASTICSEARCH_MAX_IDLE_CONNS_PER_HOST=20
ELASTICSEARCH_IDLE_CONN_TIMEOUT=90s
ELASTICSEARCH_MAX_CONN_LIFETIME=30m

# Performance Settings
ELASTICSEARCH_COMPRESSION_ENABLED=true
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_RETRY_ON_STATUS=502,503,504,429

# Timeouts
ELASTICSEARCH_CONNECT_TIMEOUT=30s
ELASTICSEARCH_REQUEST_TIMEOUT=60s

# Reconnection Settings
ELASTICSEARCH_RECONNECT_ENABLED=true
ELASTICSEARCH_RECONNECT_DELAY=5s
ELASTICSEARCH_MAX_RECONNECT_DELAY=1m
ELASTICSEARCH_RECONNECT_BACKOFF=2.0
ELASTICSEARCH_MAX_RECONNECT_ATTEMPTS=10

# Health Checks
ELASTICSEARCH_HEALTH_CHECK_ENABLED=true
ELASTICSEARCH_HEALTH_CHECK_INTERVAL=30s

# ID Generation (recommended: elastic for optimal shard distribution)
ELASTICSEARCH_ID_MODE=elastic

# Application Settings
ELASTICSEARCH_APP_NAME=my-production-app
ELASTICSEARCH_CONNECTION_NAME=main-production

# Logging
ELASTICSEARCH_LOG_LEVEL=info
ELASTICSEARCH_LOG_FORMAT=json

# === Payments Service Instance ===
PAYMENTS_ELASTICSEARCH_HOSTS=elasticsearch-payments.production.com:9200
PAYMENTS_ELASTICSEARCH_PORT=9200
PAYMENTS_ELASTICSEARCH_USERNAME=payments_user
PAYMENTS_ELASTICSEARCH_PASSWORD=payments_password
PAYMENTS_ELASTICSEARCH_TLS_ENABLED=true
PAYMENTS_ELASTICSEARCH_APP_NAME=payments-service
PAYMENTS_ELASTICSEARCH_CONNECTION_NAME=payments-production

# === Orders Service Instance ===
ORDERS_ELASTICSEARCH_HOSTS=elasticsearch-orders.production.com:9200
ORDERS_ELASTICSEARCH_PORT=9200
ORDERS_ELASTICSEARCH_USERNAME=orders_user
ORDERS_ELASTICSEARCH_PASSWORD=orders_password
ORDERS_ELASTICSEARCH_TLS_ENABLED=true
ORDERS_ELASTICSEARCH_APP_NAME=orders-service
ORDERS_ELASTICSEARCH_CONNECTION_NAME=orders-production

